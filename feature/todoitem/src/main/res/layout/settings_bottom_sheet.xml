<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_rounded_corners"
    android:elevation="16dp"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingVertical="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/choose_theme"
        android:textAppearance="@style/TextAppearance.ToDo.Title"
        android:textColor="?attr/label_primary" />

    <RadioGroup
        android:id="@+id/theme_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="@string/day_theme"
            android:textAppearance="@style/TextAppearance.ToDo.Body"
            android:textColor="?attr/label_secondary" />

        <RadioButton
            android:id="@+id/radio_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="@string/night_theme"
            android:textAppearance="@style/TextAppearance.ToDo.Body"
            android:textColor="?attr/label_secondary" />

        <RadioButton
            android:id="@+id/radio_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="@string/system_theme"
            android:textAppearance="@style/TextAppearance.ToDo.Body"
            android:textColor="?attr/label_secondary" />

    </RadioGroup>

    <Button
        android:id="@+id/apply_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_rounded_corners"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.ToDo.Button" />

</LinearLayout>
