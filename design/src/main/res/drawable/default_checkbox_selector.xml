<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="?attr/color_green" />
                    <corners android:radius="4dp" />
                </shape>
            </item>
            <item android:width="14dp" android:height="10dp" android:drawable="@drawable/check" android:gravity="center" />
        </layer-list>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <stroke android:width="2dp" android:color="?attr/support_separator" />
        </shape>
    </item>

</selector>
