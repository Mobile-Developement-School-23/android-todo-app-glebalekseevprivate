<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Style.ToDo.RoundedFloatingActionButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearanceOverlay</item>
    </style>

    <style name="RoundedShapeAppearanceOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Style.ToDo.Toolbar.Todo" parent="">
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Style.ToDo.SpinnerItem" parent="">
        <item name="android:textAppearance">@style/TextAppearance.ToDo.Subhead</item>
        <item name="android:textColor">?attr/label_tertiary</item>
        <item name="android:paddingEnd">96dp</item>
    </style>

    <style name="Style.ToDo.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/switch_thumb_selector</item>
        <item name="trackTint">@color/switch_track_selector</item>
    </style>


    <style name="Style.ToDo.DatePicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">?attr/color_blue</item>
        <item name="colorAccent">?attr/color_blue</item>
        <item name="android:windowBackground">?attr/back_secondary</item>
        <item name="android:textColorSecondary">?attr/label_tertiary</item>
        <item name="android:textColorPrimary">?attr/label_primary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Style.ToDo.DatePicker.Button
        </item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Style.ToDo.DatePicker.Button
        </item>
    </style>

    <style name="Style.ToDo.DatePicker.Button" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/color_blue</item>
    </style>
</resources>


