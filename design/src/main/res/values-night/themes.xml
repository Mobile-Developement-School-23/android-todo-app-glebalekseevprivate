        <item name="android:windowLightStatusBar">true</item>
        <item name="support_separator">@color/gray_500</item>
        <item name="support_overlay">@color/light_700</item>
        <item name="label_primary">@color/black</item>
        <item name="label_secondary">@color/dark_400</item>
        <item name="label_tertiary">@color/gray_600</item>
        <item name="label_disable">@color/gray_400</item>
        <item name="color_red">@color/red_600</item>
        <item name="color_red_20">@color/red_600_20</item>
        <item name="color_green">@color/green_600</item>
